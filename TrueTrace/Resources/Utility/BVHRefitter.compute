int Resettled;
[numthreads(256,1,1)]
void TLASLightBVHRefitKernel (uint3 id : SV_DispatchThreadID)
{
    if(id.x >= (uint)SetCount) return;
    const int Index = WorkingSet[id.x];
    const int NodeLeft = LightNodesWrite[Index].left;
    if(Resettled == 0) LightNodesWrite[Index + LightTreePrimaryTLASOffset] = LightNodesWrite[Index];
    if(NodeLeft < 0) {
        int StartIndex = _MeshData[_LightMeshes[-(NodeLeft+1)].LockedMeshIndex].LightNodeOffset;
        float4x4 TransfMat = inverse(_MeshData[_LightMeshes[-(NodeLeft+1)].LockedMeshIndex].W2L);
       	#ifdef UseSGTree
	        float3 ExtendedCenter = transform_position(TransfMat, LightNodesWrite[StartIndex].position + float3(LightNodesWrite[StartIndex].radius, 0, 0));
	        float3 center = transform_position(TransfMat, LightNodesWrite[StartIndex].position);
	        float3 axis = transform_direction(TransfMat, i_octahedral_32(LightNodesWrite[StartIndex].axis));
	        float Scale = length(center - ExtendedCenter) / LightNodesWrite[StartIndex].radius;

	        LightNodesWrite[Index].position = center;
	        LightNodesWrite[Index].sharpness = min(VMFAxisLengthToSharpness(saturate(VMFSharpnessToAxisLength(LightNodesWrite[StartIndex].sharpness))), 2199023255552.0f);// ((3.0f * Distance(Vector3.zero, V) - Mathf.Pow(Distance(Vector3.zero, V), 3))) / (1.0f - Mathf.Pow(Distance(Vector3.zero, V), 2));
	        LightNodesWrite[Index].axis = octahedral_32(axis);
	        LightNodesWrite[Index].variance = LightNodesWrite[StartIndex].variance * Scale;        

	        LightNodesWrite[Index].radius = LightNodesWrite[StartIndex].radius * Scale;
	        LightNodesWrite[Index].intensity = LightNodesWrite[StartIndex].intensity * Scale * Scale;
	    #else
	        float3 center = transform_position(TransfMat, (LightNodesWrite[StartIndex].BBMax + LightNodesWrite[StartIndex].BBMin) / 2.0f);
	        float3 extent = transform_direction(TransfMat, (LightNodesWrite[StartIndex].BBMax - LightNodesWrite[StartIndex].BBMin) / 2.0f);
	        LightNodesWrite[Index].BBMax = center + extent;
	        LightNodesWrite[Index].BBMin = center - extent;
	        float Scale = 1.0f;//length((LightNodesWrite[StartIndex].BBMax - LightNodesWrite[StartIndex].BBMin) / 2.0f) / length(extent);
	        LightNodesWrite[Index].w = octahedral_32(transform_direction(TransfMat, i_octahedral_32(LightNodesWrite[StartIndex].w)));
	        LightNodesWrite[Index].phi = max(LightNodesWrite[StartIndex].phi * Scale,0.000000f);
	        LightNodesWrite[Index].cosTheta_oe = LightNodesWrite[StartIndex].cosTheta_oe;
	     #endif
        return;
    }
    #ifdef UseSGTree
	    LightNodesWrite[Index] = UnionSG(LightNodesWrite[NodeLeft], LightNodesWrite[NodeLeft + 1], NodeLeft);
	#else
    	LightNodesWrite[Index] = Union(LightNodesWrite[NodeLeft], LightNodesWrite[NodeLeft + 1], NodeLeft);
    #endif
}




float3 unpackRGBE(uint x)
{
    int exponent = int(x >> 27) - 20;
    float scale = pow(2, exponent) / 256.0;

    float3 v;
    v.r = float(x & 0x1ff) * scale;
    v.g = float((x >> 9) & 0x1ff) * scale;
    v.b = float((x >> 18) & 0x1ff) * scale;

    return v;
}


#pragma kernel BLASLightTreeRefitKernel

int TotalNodeOffset;

inline float AreaOfTriangle(float3 pt1, float3 pt2, float3 pt3) {
 return 0.5f * length(cross(pt2 - pt1, pt3 - pt1));
}
float4x4 ToWorld;

struct TrianglePos {
	float3 pos0;
	float3 posedge1;
	float3 posedge2;
};
inline TrianglePos triangle_get_positions(const int ID) {
	TrianglePos tri;
	tri.pos0 = CudaTriArrayINA.Load(ID).pos0;
	tri.posedge1 = CudaTriArrayINA.Load(ID).posedge1;
	tri.posedge2 = CudaTriArrayINA.Load(ID).posedge2;
	return tri;
}
[numthreads(256,1,1)]
void BLASLightTreeRefitKernel (uint3 id : SV_DispatchThreadID)
{
    if(id.x >= (uint)SetCount) return;
    const int Index = WorkingSet[id.x] + TotalNodeOffset;
    const int NodeLeft = LightNodesWrite[Index].left;
    [branch]if(NodeLeft < 0) {
        const LightTriData LightTri = LightTriangles[-(NodeLeft+1) + LightTriBuffOffset];
        const TrianglePos TriPositions = triangle_get_positions(LightTri.TriTarget + TriBuffOffset);
        
#ifdef UseSGTree
	        float3 mean = (TriPositions.pos0 + (TriPositions.pos0 + TriPositions.posedge1) + (TriPositions.pos0 + TriPositions.posedge2)) / 3.0f;
	        float radius = max(max(distance(mean, TriPositions.pos0), distance(mean, TriPositions.pos0 + TriPositions.posedge1)), distance(mean, TriPositions.pos0 + TriPositions.posedge2));

	        float area = AreaOfTriangle(TriPositions.pos0, TriPositions.pos0 + TriPositions.posedge1, TriPositions.pos0 + TriPositions.posedge2);

	        float intensity = LightTri.SourceEnergy * area;
	        float3 V = 0.5f * normalize(cross(TriPositions.posedge1, TriPositions.posedge2));
	        float variance = (dot(TriPositions.posedge1, TriPositions.posedge1) + dot(TriPositions.posedge2, TriPositions.posedge2) - dot(TriPositions.posedge1, TriPositions.posedge2)) / 18.0f;

	        float AxisLength = length(V);
	        if(AxisLength == 0) V = float3(0,1,0);
	        else V /= AxisLength;
	        LightNodesWrite[Index].sharpness = min(VMFAxisLengthToSharpness(saturate(AxisLength)), 2199023255552.0f);// ((3.0f * Distance(Vector3.zero, V) - Mathf.Pow(Distance(Vector3.zero, V), 3))) / (1.0f - Mathf.Pow(Distance(Vector3.zero, V), 2));

	        LightNodesWrite[Index].position = mean;
	        LightNodesWrite[Index].radius = radius;
	        LightNodesWrite[Index].intensity = intensity;
	        LightNodesWrite[Index].variance = variance;
	        LightNodesWrite[Index].axis = octahedral_32(V);
#else 
	        float3 BBMax = max(max(TriPositions.pos0, TriPositions.pos0 + TriPositions.posedge1), TriPositions.pos0 + TriPositions.posedge2);
	        float3 BBMin = min(min(TriPositions.pos0, TriPositions.pos0 + TriPositions.posedge1), TriPositions.pos0 + TriPositions.posedge2);
	        [unroll]for(int i = 0; i < 3; i++) {
	            if(abs(BBMax[i] - BBMin[i]) < 0.0001f) {
	                BBMax[i] += 0.0001f;
	                BBMin[i] -= 0.0001f;
	            }
	        }
	        LightNodesWrite[Index].BBMax = BBMax;
	        LightNodesWrite[Index].BBMin = BBMin;
	        LightNodesWrite[Index].w = octahedral_32(-normalize(cross(normalize(TriPositions.posedge1), normalize(TriPositions.posedge2))));
	        float area = AreaOfTriangle(mul(ToWorld, float4(TriPositions.pos0,1)).xyz, mul(ToWorld, float4(TriPositions.pos0 + TriPositions.posedge1,1)).xyz, mul(ToWorld, float4(TriPositions.pos0 + TriPositions.posedge2,1)).xyz);
	        if(area == 0) area = 0.000000001f;

	        LightNodesWrite[Index].phi = LightTri.SourceEnergy * area;   
#endif
        return;
    }

#ifdef UseSGTree
    LightNodesWrite[Index] = UnionSG(LightNodesWrite[NodeLeft + TotalNodeOffset], LightNodesWrite[NodeLeft + 1 + TotalNodeOffset], NodeLeft);
#else
    LightNodesWrite[Index] = Union(LightNodesWrite[NodeLeft + TotalNodeOffset], LightNodesWrite[NodeLeft + 1 + TotalNodeOffset], NodeLeft);
#endif
}

