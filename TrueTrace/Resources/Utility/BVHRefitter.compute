inline uint GetNodeMeta(uint2 meta, int i) {
	return (meta[i >= 4] >> ((i % 4) * 8)) & 0xFF;
} 


StructuredBuffer<int> WorkingBuffer;
[numthreads(128, 1, 1)]
void RefitLayer(uint3 id : SV_DispatchThreadID)
{
	if (id.x >= NodeCount)
		return;
	id.x = WorkingBuffer[id.x];
	float3 RunningMax = -99999999.0f;//AllNodes[id.x].BBMax;
	float3 RunningMin = 99999999.0f;//AllNodes[id.x].BBMin;
	float3 BBMax[8];
	float3 BBMin[8];
	uint PopulatedSlots = 0;

	BVHNode8Data RootCWBVHNode = AggNodes[id.x + NodeOffset];
	int i;
	const uint4 NodeTotal = RootCWBVHNode.nodes[1];
	[unroll]for(i = 0; i < 8; i++) {
		BBMax[i] = -999999.0f;
		BBMin[i] = 999999.0f;
		uint NodeMeta = GetNodeMeta(NodeTotal.zw, i);
		int NumBits = countbits(NodeMeta >> 5);
		if(NumBits == 0) continue;
		PopulatedSlots |= 1 << i;
		int RelevantOffset = NodeMeta & 0x1F;
		[branch]if(RelevantOffset < 24) {
			int Start = (RelevantOffset + NodeTotal.y);
			[unroll]for(int i2 = 0; i2 < NumBits; i2++) {
				int Tri = Start + i2;
				BBMax[i] = max(BBMax[i], Boxs[Tri].BBMax);
				BBMin[i] = min(BBMin[i], Boxs[Tri].BBMin);
			}
		} else {
            int child_index = NodeTotal.x + RelevantOffset - 24;
			BBMax[i] = NodeTotalBounds[child_index].BBMax;
			BBMin[i] = NodeTotalBounds[child_index].BBMin;
		}
	}

	[unroll]for(i = 0; i < 8; i++) {
		if(!((PopulatedSlots >> i) & 0x1)) continue;
		RunningMax = max(RunningMax, BBMax[i]);
		RunningMin = min(RunningMin, BBMin[i]);
	}



	NodeTotalBounds[id.x].BBMax = RunningMax;
	NodeTotalBounds[id.x].BBMin = RunningMin;
	
	float3 e = pow(2, ceil(log2((RunningMax - RunningMin) * 0.003921569f)));
	float3 p = RunningMin;


	RootCWBVHNode.nodes[0] = uint4(asuint(p.x),
								asuint(p.y),
								asuint(p.z),
								((asuint(e.x) >> 23) | ((asuint(e.y) >> 23) << 8) | ((asuint(e.z) >> 23) << 16) | (RootCWBVHNode.nodes[0].w & 0xFF000000)));

	uint4 NodeA = 0;
	uint4 NodeB = 0;
	uint4 NodeC = 0;


	e = 1.0f / e;
	[unroll]
	for(i = 0; i < 8; i++) {
		BBMax[i] = ceil((BBMax[i] - p) * e);
		BBMin[i] = floor((BBMin[i] - p) * e);
	}

	uint3 Max;
	uint3 Min;

	[unroll]
	for(i = 0; i < 4; i++) {
		if(!((PopulatedSlots >> i) & 0x1)) continue;

		Max = (BBMax[i]);
		Min = (BBMin[i]);
		int i2 = i * 8;
		NodeA.x |= (Min.x & 0xFF) << i2;
		NodeA.y |= (Max.x & 0xFF) << i2;
		NodeB.x |= (Min.y & 0xFF) << i2;
		NodeB.y |= (Max.y & 0xFF) << i2;
		NodeC.x |= (Min.z & 0xFF) << i2;
		NodeC.y |= (Max.z & 0xFF) << i2;
	}

	[unroll]
	for(i = 4; i < 8; i++) {
		if(!((PopulatedSlots >> i) & 0x1)) continue;

		Max = (BBMax[i]);
		Min = (BBMin[i]);
		int i2 = i * 8;
		NodeA.z |= (Min.x & 0xFF) << i2;
		NodeA.w |= (Max.x & 0xFF) << i2;
		NodeB.z |= (Min.y & 0xFF) << i2;
		NodeB.w |= (Max.y & 0xFF) << i2;
		NodeC.z |= (Min.z & 0xFF) << i2;
		NodeC.w |= (Max.z & 0xFF) << i2;
	}

	RootCWBVHNode.nodes[2] = NodeA;
	RootCWBVHNode.nodes[3] = NodeB;
	RootCWBVHNode.nodes[4] = NodeC;


	AggNodes[id.x + NodeOffset] = RootCWBVHNode;

}
